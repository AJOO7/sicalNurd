<link rel="stylesheet" href="/css/user-post.css" />
<div class="post-container">
  <section id="feed-posts">
    <h3 class="post-head">What do you want to talk about?</h3>
    <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">
      <br />
      <div>
        <small>POST TITLE</small>
        <br />
        <input type="text" name="heading" placeholder="Type Here..." required />
      </div>
      <br />
      <div>
        <small>POST CONTENT</small>
        <br />
        <textarea
          name="content"
          placeholder="Type Here..."
          style="width: 100%"
          rows="10%"
          required
        ></textarea>
      </div>

      <input class="post-btn" type="submit" value="Post" />
    </form>
    <% } %>
  </section>
</div>
